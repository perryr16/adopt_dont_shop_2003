<div class="background">
  <img src="https://wallpaperaccess.com/full/783057.jpg" alt="kitten">
</div>

<div class="content">
  <div class="main_menu">
    <a href="/">Main</a>
    <a href="/shelters">Shelters</a>
    <a href="/shelters/new">New Shelter</a>
    <a href="/pets">Pets</a>

  </div>

  <h1 class="header">Update A Shelter</h1>

  <section class="bold">
    <%= form_tag "/shelters/#{@shelter.id}", method: :patch do %>
      <%= label_tag :name%><br>
      <%= text_field_tag :name, "#{@shelter.name}"%><br><br>
      <%= label_tag :address%><br>
      <%= text_field_tag :address, "#{@shelter.address}"%><br><br>
      <%= label_tag :city%><br>
      <%= text_field_tag :city, "#{@shelter.city}"%><br><br>
      <%= label_tag :state%><br>
      <%= text_field_tag :state, "#{@shelter.state}"%><br><br>
      <%= label_tag :zip%><br>
      <%= text_field_tag :zip, "#{@shelter.zip}"%><br><br>

      <%= submit_tag  "Update Shelter"%>
    <% end %>
  </section>

</div> /* final */
