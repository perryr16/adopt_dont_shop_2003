<div class="background">
  <img src="https://wallpaperaccess.com/full/783057.jpg" alt="kitten">
</div>

<div class="content">
  <div class="main_menu">
    <a href="/">Main</a>
    <a href="/shelters">Shelters</a>
    <a href="/shelters/new">New Shelter</a>
    <a href="/pets">Pets</a>

  </div>

  <h1 class="header"><%= @shelter.name %> PETS!</h1>
  <h2>Pet Count: <%= @pets.length %></h2>
  <a calss="pet-link hover" href="/shelters/<%= @shelter.id %>/pets?adpoptable=true">Show Only Adoptable Pets</a>
  <a class="pet-link hover bold" href="/shelters/<%= @shelter.id %>/pets/new">New Pet</a><br><br>
  <% @pets.each do |pet| %>

  <div class="pet-list">

    <img class="pet-image-small" src="<%= pet.image %>" alt="<%= pet.name %> image"> <p>
    <h2><a class="pet-link hover" href="/pets/<%= pet.id %>"><%= pet.name %></a></h2>
    <p>Approximate Age: <%= pet.age %><p>
    <p>Sex: <%= pet.sex %><p>
    <p>Name of Shelter: <%= pet.shelter.name %><p>
  <a class="edit" href="/pets/<%= pet.id %>/edit">Update Pet</a>
  <form class= "delete-form" action="/pets/<%= pet.id %>" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" name="delete_button" value="Delete"/>
  </form>
</div><br><br>


  <% end %>


</div>
