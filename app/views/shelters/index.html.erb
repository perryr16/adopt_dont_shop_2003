<div class="background">
  <img src="https://wallpaperaccess.com/full/783057.jpg" alt="kitten">
</div>

<div class="content">
  <div class="main_menu">
    <a href="/">Main</a>
    <a class="active" href="/shelters">Shelters</a>
    <a href="/shelters/new">New Shelter</a>
    <a href="/pets">Pets</a>
    <a href="/pets/new">New Pet</a>

  </div>
  <h1>All Shelters</h1>

  <% @shelters.each do |shelter| %>

      <h2><a class="shelter-link" href="/shelters/<%= shelter.id %>"><%= shelter.name %></a></h2>
      <p><a class="edit" href="/shelters/<%= shelter.id %>/edit">Update Shelter</a></p>
      <form class="delete-form" action="/shelters/<%= shelter.id %>" method="POST">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" name="delete_button" value="delete"/>
      </form>

  <% end %>

</div>
