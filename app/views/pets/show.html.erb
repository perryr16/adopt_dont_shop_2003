<div class="background">
  <img src="https://wallpaperaccess.com/full/783057.jpg" alt="kitten">
</div>

<div class="content">
  <div class="main_menu">
    <a href="/">Main</a>
    <a href="/shelters">Shelters</a>
    <a href="/shelters/new">New Shelter</a>
    <a href="/pets">Pets</a>
    <a href="/pets/new">New Pet</a>
  </div>

  <h1 class="header">Pet Details</h1>
  <img class="pet-image" src="<%= @pet.image %>" alt="<%= @pet.name %> image"> <p>
  <h3>Name: <%= @pet.name %></h3>
  <p>Description: <%= @pet.description %></p>

  <p>Approximate Age: <%= @pet.age %><p>
  <p>Sex: <%= @pet.sex %><p>
  <p>Name of Shelter: <a href="/shelters/<%= @shelter.id %>"><%= @pet.shelter %></a><p>
  <p>Adoption status: <%= @pet.adoption_status %></p>
  <% if @pet.adoptable %>
    <form class="" action="/pets/<%= @pet.id %>/pending" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <input type="hidden" name="_method" value="PATCH">
      <input type="hidden" name="pet[adoptable]" value="false">
      <input type="submit" name="submit_button" value="Change to Adoption Pending">
    </form>
  <% elsif !@pet.adoptable %>
  <form class="" action="/pets/<%= @pet.id %>/adoptable" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="PATCH">
    <input type="hidden" name="pet[adoptable]" value="true">
    <input type="submit" name="submit_button" value="Change to Adoptable">
  </form>
    <% end %><br><br>
  <a class="edit" href="/pets/<%= @pet.id %>/edit">Update Pet</a><br><br>
  <form class= "delete-form" action="/pets/<%= @pet.id %>" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" name="delete_button" value="Delete"/>
  </form>

</div>
